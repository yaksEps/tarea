
import java.util.Scanner;

public class calculadora {
    public static void main(String[] args){
        Scanner teclado = new Scanner(System.in);
        double parciales,proyecto,examen,prom;
        System.out.print("Ingrese la calificacion de los parciales: ");
        parciales=teclado.nextDouble();
        System.out.print("Ingrese la calificacion del proyecto: ");
        proyecto=teclado.nextDouble();
        System.out.print("Ingrese la calificacion del examen final: ");
        examen=teclado.nextDouble();
        prom=(parciales*0.40)+(proyecto*0.30)+(examen*0.30);
        System.out.println("Su calificacion es de: "+prom);
    }
}
